@model IEnumerable<Learning.UI.Models.DTO.RegionDto>


<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>

</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Regions in Model)
        {
            <tr>
                <td>@Regions.Id</td>
                <td>@Regions.Name</td>
                <td>@Regions.Code</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@Regions.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>